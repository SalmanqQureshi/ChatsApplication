<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/curved"/>-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="0dp"
            android:layout_alignParentLeft="false"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/ic_wave"
            android:rotationY="180" />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Login"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-10dp"
        android:backgroundTint="@color/white"
        android:elevation="8dp"
        app:cardCornerRadius="60dp">

        <TextView
            android:id="@+id/txt_registeractivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:text="Registration"
            android:textColor="@color/blue"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/emailPasscard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="55dp"
            android:backgroundTint="@color/white"
            android:elevation="8dp"
            app:cardCornerRadius="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/verified_user_24" />

                    <EditText
                        android:id="@+id/emailtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@color/white"
                        android:hint="User" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/light_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="47dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/lock" />

                    <EditText
                        android:id="@+id/passtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/white"
                        android:hint="Password"
                        android:soundEffectsEnabled="true" />
                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/logInbtn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="-65dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@+id/emailPasscard"
            android:background="@drawable/blue_circle"
            android:padding="10dp"
            android:src="@drawable/arrow_forward"
            android:tint="@color/white" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:text="Forget Password?" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:rotationX="180">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="-40dp"
            android:layout_marginEnd="-150dp"
            android:src="@drawable/login_ui" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="-140dp"
            android:layout_marginTop="-120dp"
            android:src="@drawable/login_ui2" />
    </LinearLayout>

</LinearLayout>